.life {
	line-height 3rem
	font-size 2.5rem

	&,
	.inner {
		margin-left auto
	}

	.inner {
		align-items center
		padding 0 1rem
		transform skewX(20deg)
	}

	.health,
	.armor {
		display flex
		align-items center
		padding .6rem 1rem
		transform skewX(-20deg)

		img {
			height 2rem
			margin-right .75rem
		}

		.number {
			width 2.75ch
			text-align right
		}
		&.--red {
			filter: invert(31%) sepia(46%) saturate(1356%) hue-rotate(2deg) brightness(90%) contrast(93%) //Filter to make it red
		}
	}
}
