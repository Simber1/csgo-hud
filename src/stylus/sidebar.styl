.sidebar {
	position absolute
	bottom $generalPaddingY

	filter drop-shadow(0 0 .4rem rgba(#000, .5))
	transition transform .5s ease

	&.--left {
		left $generalPaddingX
	}

	&.--right {
		right $generalPaddingX

		.economy,
		.utility {
			margin-left auto
		}
	}

	&.--series-active {
		$seriesHeight = 17.9rem
		transform translateY(-($seriesHeight + 1rem))
	}

	.rightAd {
		position relative
		margin-left auto
		transition transform .5s ease
		width calc(22.5ch + 2rem  + 16rem)
		&:not(.--active) { //Moves down to match when money leaves
			transform translateY(62.5%)
		}
	}

	.rightAdBox {
		position absolute
		top 6%
		right 6%
		transform scale(0.8)
	}

	@keyframes SidebarImages {
		0% {
			opacity:1;
		}
		48.5% {
			opacity:1;
		}
		51.5% {
			opacity:0;
		}
		100% {
			opacity:0;
		}
	}

	@keyframes SidebarImagesReverse {
		0% {
			opacity:0;
		}
		48.5% {
			opacity:0;
		}
		51.5% {
			opacity:1;
		}
		100% {
			opacity:1;
		}
	}

	.twitchStudent{
		animation-name: SidebarImages;
		animation-timing-function: ease-in-out;
		animation-iteration-count: infinite;
		animation-duration: 20s;
		animation-direction: alternate;
		right 10%
		transform scale(0.75)
		top 4%
	}

	.intelLogo {
		animation-name: SidebarImagesReverse;
		animation-timing-function: ease-in-out;
		animation-iteration-count: infinite;
		animation-duration: 20s;
		animation-direction: alternate;
	}


	.economy,
	.utility {
		width 70.75% // TODO should probably not be hardcoded
	}

	@require 'sidebar/economy'
	@require 'sidebar/player'
	@require 'sidebar/utility'
}
